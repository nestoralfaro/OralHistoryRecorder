<Page
    x:Class="OralHistoryRecorder.AdminPassPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OralHistoryRecorder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="passwordPrompt" Text="Enter Username: " Margin="0,0,15,0" Height="30"/>
            <TextBox PlaceholderText="Username" RelativePanel.RightOf="passwordPrompt" Height="30"/>
            <PasswordBox x:Name="adminPass" PlaceholderText="Enter Administrator Password" 
                         RelativePanel.Below="passwordPrompt"
                         Width="200"/>
        </RelativePanel>
    </Grid>
</Page>
